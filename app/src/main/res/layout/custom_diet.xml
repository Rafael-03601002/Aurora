<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_dark">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="36dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/diet_setting">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/btn_diet_monday"
                        style="@style/Widget.MaterialComponents.TimePicker.Button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:background="@android:color/transparent"
                        android:text="@string/monday"
                        android:textColor="@color/gray_light"
                        app:layout_constraintEnd_toStartOf="@+id/btn_diet_tuesday"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <Button
                        android:id="@+id/btn_diet_tuesday"
                        style="@style/Widget.MaterialComponents.TimePicker.Button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:text="@string/tuesday"
                        android:textColor="@color/gray_light"
                        app:layout_constraintEnd_toStartOf="@+id/btn_diet_wednesday"
                        app:layout_constraintStart_toEndOf="@id/btn_diet_monday"
                        app:layout_constraintTop_toTopOf="parent" />

                    <Button
                        android:id="@+id/btn_diet_wednesday"
                        style="@style/Widget.MaterialComponents.TimePicker.Button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:text="@string/wednesday"
                        android:textColor="@color/gray_light"
                        app:layout_constraintEnd_toStartOf="@+id/btn_diet_thursday"
                        app:layout_constraintStart_toEndOf="@id/btn_diet_tuesday"
                        app:layout_constraintTop_toTopOf="parent" />

                    <Button
                        android:id="@+id/btn_diet_thursday"
                        style="@style/Widget.MaterialComponents.TimePicker.Button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:text="@string/thursday"
                        android:textColor="@color/gray_light"
                        app:layout_constraintEnd_toStartOf="@+id/btn_diet_friday"
                        app:layout_constraintStart_toEndOf="@id/btn_diet_wednesday"
                        app:layout_constraintTop_toTopOf="parent" />

                    <Button
                        android:id="@+id/btn_diet_friday"
                        style="@style/Widget.MaterialComponents.TimePicker.Button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:text="@string/friday"
                        android:textColor="@color/gray_light"
                        app:layout_constraintEnd_toStartOf="@+id/btn_diet_saturday"
                        app:layout_constraintStart_toEndOf="@id/btn_diet_thursday"
                        app:layout_constraintTop_toTopOf="parent" />

                    <Button
                        android:id="@+id/btn_diet_saturday"
                        style="@style/Widget.MaterialComponents.TimePicker.Button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:text="@string/saturday"
                        android:textColor="@color/gray_light"
                        app:layout_constraintEnd_toStartOf="@+id/btn_diet_sunday"
                        app:layout_constraintStart_toEndOf="@id/btn_diet_friday"
                        app:layout_constraintTop_toTopOf="parent" />

                    <Button
                        android:id="@+id/btn_diet_sunday"
                        style="@style/Widget.MaterialComponents.TimePicker.Button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:background="@android:color/transparent"
                        android:text="@string/sunday"
                        android:textColor="@color/gray_light"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/btn_diet_saturday"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/diet_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:src="@drawable/settings"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@+id/view3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

                <LinearLayout
                    android:id="@+id/diet_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </ScrollView>

            <Button
                android:id="@+id/add_diet"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="24dp"
                android:backgroundTint="@color/gray_semi_semi_dark"
                android:foreground="@android:drawable/ic_input_add"
                android:foregroundGravity="center"
                android:foregroundTint="@color/white"
                app:cornerRadius="60dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <View
                android:id="@+id/view3"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginBottom="108dp"
                android:foreground="@color/gray"
                app:layout_constraintBottom_toTopOf="@+id/add_diet"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Today's calories:"
                android:textColor="@color/gray_light"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/text_totalCalories"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/text_totalCalories" />

            <TextView
                android:id="@+id/text_totalCalories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="TextView"
                android:textColor="@color/white"
                android:textSize="22sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view3" />



        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>